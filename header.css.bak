/* Menü-Styling */
.menu {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #f0f0f0;
  border-bottom: 2px solid #333;
  box-shadow: 0 2px 5px rgba(0,0,0,0.2);
  padding: 10px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 1000;
}

/* Logo */
.logo img {
  width: 40px;
  height: 40px;
}

/* Links und Buttons */
.nav-links {
  display: flex;
  align-items: center;
  gap: 15px;
}

/* Alle Links ohne Standard-Blau */
a, a:visited {
  color: #000;
  text-decoration: none;
}
a:hover {
  color: #0077ff;
}

/* Dropdown */
.dropdown {
  position: relative;
}

.dropbtn {
  background-color: transparent;
  border: none;
  font-size: 16px;
  cursor: pointer;
  padding: 8px 12px;
  border-radius: 6px;
  transition: background-color 0.3s;
}

.dropbtn:hover {
  background-color: #ddd;
}

/* Versteckter Inhalt */
.dropdown-content {
  display: none;
  position: absolute;
  background-color: white;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  border-radius: 6px;
  min-width: 180px;
  top: 100%;
  left: 0;
  z-index: 1001;
}

.dropdown-content a {
  display: block;
  padding: 10px 15px;
}

.dropdown-content a:hover {
  background-color: #f0f0f0;
}

/* Sichtbar, wenn geöffnet (wird per JS gesetzt) */
.dropdown.active .dropdown-content {
  display: block;
}

/* Lupe im Menü */
.search-toggle {
  background: none;
  border: none;
  font-size: 20px;
  cursor: pointer;
  padding: 6px;
  margin-left: 10px;
  transition: transform 0.2s;
}

.search-toggle:hover {
  transform: scale(1.2);
}

/* Suchbereich (standardmäßig versteckt) */
.search-section {
  background-color: #e9e9e9;
  padding: 8px 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #ccc;
  border-bottom: 2px solid #333;
  position: fixed;
  top: 60px;
  left: 0;
  width: 100%;
  z-index: 999;
}

.search-section.hidden {
  display: none;
}

/* Suchfeld */
.search-form {
  display: flex;
  align-items: center;
  gap: 5px;
}

.search-form input {
  padding: 6px 10px;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-size: 14px;
}

.search-form button {
  background-color: #0077ff;
  color: white;
  border: none;
  padding: 6px 10px;
  border-radius: 6px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.search-form button:hover {
  background-color: #005fcc;
}

/* Damit der Inhalt nicht überdeckt wird */
body {
  padding-top: 120px; /* Menü + ausgeklappte Suche */
}
